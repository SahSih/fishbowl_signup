<!DOCTYPE html>
<html>
<head>
<title>Subscribe</title>
<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap Core CSS -->
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.mim.css' />
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
      <link rel="stylesheet" href='/stylesheets/font-awesome.css'>
    <link rel="stylesheet" href="/stylesheets/bootsnipp.min.css">
    <!-- Custom CSS -->
	<script	src="/js/angular.min.js"></script>
	<script
	src="/angularJS/user.js"></script>
    <!-- Fonts -->
</head>
<body>


<!-- This panel is for login -->
<div class="container" ng-app="user" ng-controller="user">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-12">
								<a href="#" class="active" id="login-form-link">Subscribe</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" name='loginForm' style="display: block;" ng-click="loginForm.$valid && checkUser();" >
									<div class="form-group">
										<input type="text"  name="name" id="name" class="form-control email" placeholder="Name"  ng-model="name"  required  >
									</div>
									
									<div class="form-group">
										<input type="age" name="age" id="age" class="form-control" placeholder="age" ng-model="age" required  >
									</div>
									<div class="alert alert-danger" ng-hide="invalid_user">
										<strong>Entered details are invalid</strong>
									</div>
									<!-- div class="form-group text-center">
										<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
										<label for="remember"> Remember Me</label>
									</div -->
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" 
														name="checkUser" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Subscribe">
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
												</div>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>